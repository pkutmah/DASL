<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DASLv2.WordPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20" />
            <On Platform="Android, UWP" Value="20" />
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout VerticalOptions="FillAndExpand" 
                 HorizontalOptions="FillAndExpand" 
                 Orientation="Vertical" 
                 Spacing="15">
        <Label Text="{Binding}" 
               x:Name="WordPageTitle"
               FontSize="Large" 
               TextColor="Orange" 
               XAlign="Center"
               HorizontalOptions="CenterAndExpand" />
        <Label Text="{Binding}" 
               x:Name="WordPageWord"
               HorizontalOptions="CenterAndExpand" />
        <Image>
            <Image.Source>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="iOS">
                        <FileImageSource File="" />
                    </On>
                    <On Platform="Android">
                        <FileImageSource File="Resources/drawable/starwarslogo.svg" />
                    </On>
                    <On Platform="UWP">
                        <FileImageSource File="Images/starwarslogo.svg" />
                    </On>
                </OnPlatform>
            </Image.Source>

        </Image>
       
        <Label Text="Made by Purdue EPICS in Conjunction with ISD" 
               x:Name="WordPageInfo"
               FontSize="8" 
               TextColor="Black" 
               XAlign="Center"
               HorizontalOptions="CenterAndExpand" />
    </StackLayout>
      
  
</ContentPage>